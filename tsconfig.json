{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Tells TypeScript to resolve non-relative paths from the project root
    "paths": {
      "@/*": ["./*"] // Maps @/* to the project root (e.g., @/components/* to ./components/*)
                     // You can also be more specific:
                     // "@/components/*": ["components/*"],
                     // "@/lib/*": ["lib/*"]
                     // etc.
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
